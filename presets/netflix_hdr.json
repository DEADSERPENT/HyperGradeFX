        "location": [250, 0],
        "properties": {
          "master_saturation": 1.1,
          "master_contrast": 1.05,
          "master_gamma": 0.98
        }
      },
      {
        "name": "node_2",
        "type": "CompositorNodeColorCorrection",
        "label": "Highlights Control",
        "location": [500, 0],
        "properties": {
          "master_gain": 1.1,
          "highlights_saturation": 1.15
        }
      },
      {
        "name": "node_3",
        "type": "CompositorNodeHueSat",
        "label": "Overall Saturation",
        "location": [750, 0],
        "properties": {}
      }
