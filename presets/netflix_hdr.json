      {
        "from_node": "node_0",
        "to_node": "node_1",
        "from_socket": 0,
        "to_socket": 0
      },
      {
        "from_node": "node_1",
        "to_node": "node_2",
        "from_socket": 0,
        "to_socket": 0
      },
      {
        "from_node": "node_2",
        "to_node": "node_3",
        "from_socket": 0,
        "to_socket": 1
      },
      {
        "from_node": "node_3",
        "to_node": "GROUP_OUTPUT",
        "from_socket": 0,
        "to_socket": 0
      }
    ]
  },
  "settings": {
    "shadow_lift": 1.05,
    "midtone_saturation": 1.1,
    "highlight_gain": 1.1
  }
